<main class="l-inner session-manager-container">
  <h1 class="session-manager-header">投稿を編集</h1>

  <%= form_for(@post, url: post_path(@post), method: :patch) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div>
      <%= f.label :title %><br>
      <%= f.text_field :title, autofocus: true, class: "form-control" %>
    </div>
    
    <div>
      <%= f.label :category %>
      <%= f.select :category_id, Category.options, prompt: '選択してください' %>
    </div>
    <br>
    
    <div>
      <%= f.label :body %><br>
      <%= f.text_area :body, class: "form-control", style:"height: 300px;" %>
    </div>

    <div>
        <%= f.label :hashtags, 'タグ', style: 'display: block' %>
        <%= f.text_area :hashtags, rows: 4 %>
    </div>
    <br>
    
    <div>
      <%= f.submit "更新する" %>
    </div>
    <br>
    <br>
  <% end %>
</main>
