<main class="l-inner session-manager-container">
  <h1 class="session-manager-header">新しい投稿</h1>

    <%= form_for(@post, url: posts_path) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div>
            <%= f.label :title %><br>
            <%= f.text_field :title, autofocus: true, class: "form-control" %>
        </div>
        
        <div>
            <%= f.label :category %>
            <%= f.select :category_id, Category.options, prompt: '選択してください' %>
        </div>
        <br>
        
        <div>
            <%= f.label :body %><br>
            <%= f.text_area :body, class: "form-control", style:"height: 300px;" %>
        </div>

        <div>
            <%= f.label :hashtags, 'タグ', style: 'display: block' %>
            <%= f.text_area :hashtags, rows: 2, class: "form-control" %>
        </div>
        <br>
        
        <div>
            <%= f.submit "投稿する", class: "btn btn-primary" %>
        </div>
        <br>
        <br>

    <% end %>

</main>